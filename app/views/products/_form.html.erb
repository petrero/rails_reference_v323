<%= simple_form_for(@product) do |f| %>
  <%= f.input :name %>
  <%= f.input :price, hint: "Price should be in US" %>
  <%= f.input :released_on, label: "Released Date" %>
  <%= f.input :rating %>
  <%= f.association :publisher %>
  <%= f.association :categories, as: :check_boxes %>
  <%= f.button :submit %>
<% end %>
