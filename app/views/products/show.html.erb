<h1><%= @product.name %></h1>

<p>
  <b>Price:</b>
  <%= number_to_currency(@product.price) %>
</p>

<p>
  <b>Categories:</b>
  <%= @product.categories.map(&:name).join(", ") %>
</p>

<p>
  <b>Released on:</b>
  <%= @product.released_on.strftime("%B %e, %Y") %>
</p>

<p>
  <b>Publisher:</b>
  <%= @product.publisher.try(:name) %>
</p>

<p>
  <b>Rating:</b>
  <%= @product.rating %>
</p>

<p>
  <b>Discontinued:</b>
  <%= @product.discontinued ? "Yes" : "No" %>
</p>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
